@using LearnJQuery.Controllers
@model LearnJQuery.Controllers.TaskRepository

@{
    ViewBag.Title = "title";
    Layout = "_Layout.cshtml";
}

<h2>title</h2>
<ul id="tasks">
    @foreach (jTask task in Model.Tasks)
    {
        <li>@task.Name</li>
    }
</ul>
<input type="text" id="taskText"><input id="submit" type="submit" value="using clientside">

<form id="AddTaskForm">
    <input type="text" name="task" />
    <input type="submit" id="AddTaskSubmit" value="full page post" />
</form>

